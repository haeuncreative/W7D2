<section class="page">
    <div class="centered-box">
    <h3>Everything will be fine.</h3>

    <form action="<%= session_url %>" method="POST">
        <%= auth_token %>
        <label for="user_email">Email: </label>
        <input type="text"
            name = "user[email]"
            id="user_email"
        >
        <br>
        <br>
        <label for="user_password">Password: </label>
        <input type="password"
            name = "user[password]"
            id="user_password"
        >
        <br>
        <input type="submit" value="Sign In">
    </form>
</div>
</section>